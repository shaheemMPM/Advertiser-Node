<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>Moniter Ads | Dashboard | WhatsAdvertiser</title>
    <link rel="shortcut icon" href="images/logo.png">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport'/>
    <!-- CSS Files -->
    <link href="css/bootstrap.min.css" rel="stylesheet"/>
    <link href="css/light-bootstrap-dashboard.css" rel="stylesheet"/>
    <link href="css/sweetalert2.min.css" rel="stylesheet">
    <style media="screen">
      .error{
        color : red;
        margin : 20px auto 30px auto;
      }
      .ct-title{
        border-top: 1px solid rgb(224, 224, 224);
      }
      .mart{
        margin-top: 5px !important;
      }
      .mtop-3{
        margin: 7px auto 7px auto !important;
      }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="images/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">
                        Whats Advertiser
                    </a>
                </div>
                <ul class="nav">
                    <li>
                        <a class="nav-link" href="/dashboard">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/adupload">
                            <i class="nc-icon nc-cloud-upload-94"></i>
                            <p>Upload Media</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/createad">
                            <i class="nc-icon nc-notification-70"></i>
                            <p>Create Ad</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#">
                            <i class="nc-icon nc-notes"></i>
                            <p>Moniter Ads</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/usermoniter">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Moniter Users</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/verifysubmissions">
                            <i class="nc-icon nc-badge"></i>
                            <p>Verify Submissions</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/redeem">
                            <i class="nc-icon nc-money-coins"></i>
                            <p>View Redeem Requests</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#pablo"> Moniter Ads </a>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                    <span class="no-icon">Log out</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
              <div class="container-fluid">
                <h3>All Advertisements</h3>
                <% if(ads.length == 0){ %>
                  <div class="error">No Ads Found</div>
                <% }else{ %>
                  <div class="row">
                    <% ads.forEach(function(ad){ %>
                        <div class="col-md-3 col-sm-4">
                          <div class="card">
                            <% if (ad.medias[0].split('.').pop() == "mp4"){ %>
                              <video autoplay loop id="video-background" muted plays-inline class="card-image">
                                <source src="uploads/<%= ad.medias[0] %>" type="video/mp4">
                              </video>
                            <% }else{ %>
                              <img src="uploads/<%= ad.medias[0] %>" class="card-image" alt="<%= ad.title %>" id="<%= ad._id %>">
                            <% } %>
                            <div class="container ct-title">
                              <h4 class="card-title mart"><%= ad.title %></h4>
                              <h6 class="card-title mtop-3">Posted by : <%= ad.users.length %></h6>
                              <a href="/ad/<%= ad._id %>" class="vmore">View More</a>
                            </div>
                          </div>
                        </div>
                    <% }) %>
                  </div>
                <% } %>
              </div>
            </div>

            <footer class="footer">
              <div class="container-fluid">
                <nav>
                  <ul class="footer-menu">
                    <li>
                      <a href="#" id="btnClearAds">Clear Ads</a>
                    </li>
                  </ul>
                </nav>
              </div>
            </footer>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="js/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="js/sweetalert2.min.js" type="text/javascript"></script>
    <script type="text/javascript">
      document.getElementById("btnClearAds").addEventListener("click", function(){
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          type: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.value) {
            Swal.fire(
              'Deleted!',
              'Your file has been deleted.',
              'success'
            ).then((res) => {
              if (res.value) {
                var link = document.createElement('a');
                link.href = '/clearaddb';
                document.body.appendChild(link);
                link.click();
              }
            })
          }
        })
      });
    </script>

</body>

</html>
